#!/bin/bash
set -e

echo "[GOST-OS] Uruchamiam konfigurację auto/config..."

lb config noauto \
    --mode debian \
    --architectures amd64 \
    --distribution trixie \
    --parent-distribution trixie \
    --binary-images iso-hybrid \
    --debian-installer live \
    --archive-areas "main contrib non-free non-free-firmware" \
    --bootappend-live "boot=live components username=gost quiet splash" \
    --iso-application "GOST-OS" \
    --iso-volume "GOST-OS" \
    --iso-publisher "GOST-Project" \
    --memtest none \
    --firmware-chroot true \
    --firmware-binary true

echo "[GOST-OS] Konfiguracja zakończona pomyślnie."
