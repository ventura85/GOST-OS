#!/bin/sh
# -*- coding: UTF-8 -*-

# Konfiguracja dla lb_config (Debian 13 Trixie)

lb config noauto \
    --mode debian \
    --distribution trixie \
    --parent-distribution trixie \
    --parent-debian-installer-distribution trixie \
    --archive-areas "main contrib non-free non-free-firmware" \
    \
    --architectures amd64 \
    --linux-packages linux-image \
    \
    --initramfs live-boot \
    \
    --binary-images iso-hybrid \
    --bootloader grub-pc \
    --iso-application "GOST OS Debian 13 Trixie" \
    --iso-publisher "GOSTOS CI/CD" \
    --iso-volume "GOSTOS_TRIXIE" \
    \
    --memtest memtest86+ \
    --debian-installer live \
    --debian-installer-gui true \
    \
    --firmware-chroot true \
    --firmware-binary true \
    --win32-loader false \
    "${@}"
