# GOST OS GRUB configuration

GRUB_DEFAULT=0
GRUB_TIMEOUT=5
GRUB_DISTRIBUTOR="GOST OS"
GRUB_CMDLINE_LINUX_DEFAULT="quiet splash"
GRUB_CMDLINE_LINUX=""

# Ustawienia wyglądu
GRUB_BACKGROUND="/usr/share/images/desktop-base/gostos-grub-background.png"
GRUB_GFXMODE=1920x1080,auto
GRUB_GFXPAYLOAD_LINUX=keep
GRUB_TERMINAL_OUTPUT=gfxterm

# Kolory i czcionki
GRUB_COLOR_NORMAL="white/black"
GRUB_COLOR_HIGHLIGHT="light-cyan/black"

# Wyłączenie niepotrzebnych komunikatów
GRUB_DISABLE_RECOVERY="true"
GRUB_DISABLE_SUBMENU="true"
